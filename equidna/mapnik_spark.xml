<Map background-color="#333" 
  srs="+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +a=6378137 +b=6378137 +towgs84=0,0,0,0,0,0,0 +units=m +no_defs">

  <Style name="countries">
    <Rule>
      <PolygonSymbolizer fill="#cc6e6e" />
      <LineSymbolizer stroke="#ccc" stroke-width="1" />
      <MinScaleDenominator >17471320.7509</MinScaleDenominator >

    </Rule>
  </Style>

  <Style name="states_provinces">
    <Rule>
      <MaxScaleDenominator >17471320.7509</MaxScaleDenominator > 
      <PolygonSymbolizer fill="#a71a1a" fill-opacity="0.5" />
      <LineSymbolizer stroke="#ccc" stroke-width="0.1" />
    </Rule>
  </Style>

  <Style name="roads">
    <Rule>
      <MaxScaleDenominator >17471320.7509</MaxScaleDenominator > 
      <LineSymbolizer stroke="#88d543" stroke-width="1"/>
    </Rule>
  </Style>

  <Layer name="countries" srs="+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +a=6378137 +b=6378137 +towgs84=0,0,0,0,0,0,0 +units=m +no_defs">
    <StyleName>countries</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/root/equidna/ne_50m_admin_0_countries_3857.shp</Parameter>
    </Datasource>
  </Layer>

  <!-- TODO: ogr2ogr wrapdateline with this layer -->
   <Layer name="states_provinces" srs="+proj=longlat +datum=WGS84 +no_defs ">
    <StyleName>states_provinces</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/root/equidna/ne_10m_admin_1_states_provinces.shp</Parameter>
    </Datasource>
  </Layer>

   <Layer name="roads" srs="+proj=longlat +datum=WGS84 +no_defs ">
    <StyleName>roads</StyleName>
    <Datasource>
      <Parameter name="type">shape</Parameter>
      <Parameter name="file">/root/equidna/ne_10m_roads.shp</Parameter>
    </Datasource>
  </Layer>

</Map>